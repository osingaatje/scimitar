#!/usr/bin/env sh
set -e

# go to dummy app (where the bundle and rake files are)
# (cannot use pushd/popd here because they cannot be found)
cd ./spec/apps/dummy
echo "==  Creating fresh database...  =="
bundle exec rake db:reset
cd ../../.. # nagivate back to root of project

echo "==  Running tests...  =="
bundle exec rspec